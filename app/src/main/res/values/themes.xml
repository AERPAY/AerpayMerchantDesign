<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AerpayMerchantDesigns" parent="Theme.AppCompat.DayNight.NoActionBar">


        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/app_clr</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="otpViewStyle">@style/OtpWidget.OtpView</item>-->
        <item name="android:fontFamily">@font/future_medium</item>
    </style>


    <style name="app_form_style">
        <item name="android:paddingLeft">32dp</item>
        <item name="android:paddingRight">32dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/app_clr</item>
    </style>

    <style name="Theme.AerpayMerchantDesigns.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AerpayMerchantDesigns.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AerpayMerchantDesigns.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="Theme.Switch" parent="Theme.AppCompat.Light.NoActionBar">


        <item name="colorAccent">@color/teal_200</item>
        <!--<item name="otpViewStyle">@style/OtpWidget.OtpView</item>-->
    </style>

</resources>