<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/sign_up_f"
    android:layout_height="match_parent"
    android:background="@color/app_clr">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_clr"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:theme="@style/ToolbarTheme">

            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mMenuImg"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/ic_back_btn" />




            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:textAllCaps="false"
                        android:background="@drawable/light_pink_button"
                        android:textStyle="bold"
                        android:textSize="19sp"
                        android:textColor="@android:color/white"
                        android:layout_width="166dp"
                        android:layout_height="44dp"
                        android:text="Product Insight">

                    </Button>


                </LinearLayout>


                <LinearLayout
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:backgroundTint="@android:color/white"
                        android:background="@drawable/days_bg"
                        android:layout_width="48dp"
                        android:layout_height="48dp">

                        <TextView
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="15dp"
                            android:text="D"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </TextView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:backgroundTint="@color/colorAccent"
                        android:background="@drawable/days_bg"
                        android:layout_width="48dp"
                        android:layout_height="48dp">

                        <TextView
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="15dp"
                            android:text="W"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </TextView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:backgroundTint="@android:color/white"
                        android:background="@drawable/days_bg"
                        android:layout_width="48dp"
                        android:layout_height="48dp">

                        <TextView
                            android:gravity="center"
                            android:textColor="@android:color/black"
                            android:textSize="15dp"
                            android:text="M"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </TextView>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/mDateLl"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:backgroundTint="@android:color/white"
                        android:background="@drawable/days_bg"
                        android:layout_width="48dp"
                        android:layout_height="48dp">

                        <ImageView
                            android:layout_gravity="center"
                            android:src="@drawable/ic_calender"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </ImageView>


                    </LinearLayout>






                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_16sdp"
                    android:paddingRight="@dimen/_16sdp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:textStyle="normal"
                        android:textSize="24dp"
                        android:textColor="@android:color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Orders from Double Whooper">

                    </TextView>

                    <LinearLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_gravity="center"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:background="@drawable/edit_text_bg"
                        android:layout_width="106dp"
                        android:layout_height="40dp">

                        <EditText
                            android:enabled="false"
                            android:gravity="center"
                            android:background="@null"
                            android:layout_weight="1.5"
                            android:padding="@dimen/_5sdp"
                            android:maxLength="50"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:hint="Select Day"
                            android:inputType="text"
                            android:textColor="@android:color/white"
                            android:textColorHint="@color/grey"
                            android:textSize="15dp" />

                        <LinearLayout
                            android:id="@+id/mMenuLl"
                            android:gravity="center"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <ImageView
                                android:src="@drawable/ic_arrow_down"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">

                            </ImageView>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:background="@drawable/product_insight_bg"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="120dp">

                            <TextView
                                android:gravity="center"
                                android:textStyle="normal"
                                android:textSize="24dp"
                                android:textColor="@android:color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Total Orders">

                            </TextView>

                            <TextView
                                android:gravity="center"
                                android:textStyle="normal"
                                android:textSize="32dp"
                                android:textColor="@android:color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="90">

                            </TextView>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:background="@drawable/product_insight_bg"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="120dp">

                            <TextView
                                android:gravity="center"
                                android:textStyle="normal"
                                android:textSize="24dp"
                                android:textColor="@android:color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Total Orders">

                            </TextView>

                            <TextView
                                android:gravity="center"
                                android:textStyle="normal"
                                android:textSize="32dp"
                                android:textColor="@android:color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="23,000">

                            </TextView>



                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:background="@drawable/order_history_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.client.aerpaymerchant.horizontalChart.HorizontalBar
                            android:id="@+id/horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>


                    </LinearLayout>



                </LinearLayout>




            </LinearLayout>


        </LinearLayout>


    </ScrollView>


</LinearLayout>