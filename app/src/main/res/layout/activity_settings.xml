<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SettingsActivity"
    android:background="@color/app_clr"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/app_clr"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:theme="@style/ToolbarTheme">

            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mMenuImg"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/ic_back_btn" />

                <TextView
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:gravity="center|left"
                    android:textSize="24dp"
                    android:textColor="@android:color/white"
                    android:text="Settings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                </TextView>




            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/mUpdateProfileLl"
            android:gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/settings_bg"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="72dp">

            <LinearLayout
                android:gravity="center"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/ic_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </ImageView>


            </LinearLayout>

            <TextView
                android:textSize="16dp"
                android:textStyle="normal"
                android:textColor="@android:color/white"
                android:text="Update Profile"
                android:layout_weight="2.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            </TextView>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/ic_arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </ImageView>


            </LinearLayout>






        </LinearLayout>

        <LinearLayout
            android:id="@+id/mHelpDeskLl"
            android:gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/settings_bg"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="72dp">

            <LinearLayout
                android:gravity="center"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/ic_helpdesk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </ImageView>


            </LinearLayout>

            <TextView
                android:textSize="16dp"
                android:textStyle="normal"
                android:textColor="@android:color/white"
                android:text="@string/help_desk"
                android:layout_weight="2.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            </TextView>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/ic_arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </ImageView>


            </LinearLayout>






        </LinearLayout>

        <LinearLayout
            android:id="@+id/mDiscountLl"
            android:gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/settings_bg"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="72dp">

            <LinearLayout
                android:gravity="center"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/ic_offers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </ImageView>


            </LinearLayout>

            <LinearLayout
                android:layout_weight="2.2"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="16dp"
                    android:textStyle="normal"
                    android:textColor="@android:color/white"
                    android:text="Get 15% Discount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

                <TextView
                    android:textSize="15dp"
                    android:textStyle="normal"
                    android:textColor="#8A8A8A"
                    android:text="Refer a friend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>

            </LinearLayout>



            <LinearLayout
                android:gravity="center"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/ic_arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </ImageView>


            </LinearLayout>






        </LinearLayout>

        <LinearLayout
            android:id="@+id/mManageDeliveryLl"
            android:gravity="center"
            android:layout_margin="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/settings_bg"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="72dp">

            <LinearLayout
                android:gravity="center"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/ic_scooter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </ImageView>


            </LinearLayout>

            <TextView
                android:textSize="16dp"
                android:textStyle="normal"
                android:textColor="@android:color/white"
                android:text="Manage Delivery Charges"
                android:layout_weight="2.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            </TextView>

            <LinearLayout
                android:gravity="center"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/ic_arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </ImageView>


            </LinearLayout>






        </LinearLayout>


        <LinearLayout
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginTop="28dp"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:textColor="@android:color/white"
                android:textStyle="normal"
                android:textSize="16dp"
                android:textAllCaps="false"
                android:text="@string/logout"
                android:background="@drawable/logout_bg"
                android:layout_width="143dp"
                android:layout_height="50dp">


            </Button>


        </LinearLayout>







    </LinearLayout>





</LinearLayout>