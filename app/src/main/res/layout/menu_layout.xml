<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/sign_up_f"
    android:layout_height="match_parent"
    android:background="@color/app_clr">



    <LinearLayout
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/bottom_sheet_bg"
        android:padding="@dimen/_16sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mProductInsightTv"
            android:padding="@dimen/_7sdp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@android:color/white"
            android:text="View Product Insight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </TextView>

        <TextView
            android:id="@+id/menuOutOfStock"
            android:padding="@dimen/_7sdp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@android:color/white"
            android:text="Out Of Stock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </TextView>

        <TextView
            android:id="@+id/menuUpdateProduct"
            android:padding="@dimen/_7sdp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@android:color/white"
            android:text="Update Product Detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </TextView>

        <TextView
            android:id="@+id/tv_delete"
            android:padding="@dimen/_7sdp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@android:color/holo_red_dark"
            android:text="Delete Product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </TextView>




    </LinearLayout>



</LinearLayout>